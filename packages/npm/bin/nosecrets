#!/usr/bin/env node
const { spawn } = require("child_process");
const path = require("path");

// Binary is stored as nosecrets-bin (or nosecrets-bin.exe on Windows)
// to avoid being overwritten by npm/pnpm wrapper scripts
const binName = process.platform === "win32" ? "nosecrets-bin.exe" : "nosecrets-bin";
const bin = path.join(__dirname, binName);
const child = spawn(bin, process.argv.slice(2), { stdio: "inherit" });
child.on("exit", (code) => process.exit(code || 0));
